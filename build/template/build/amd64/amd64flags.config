cppflags_main = -ffreestanding -fno-stack-protector -fpic -fno-builtin -fshort-wchar -mno-red-zone \
	-Wall -Wextra -fno-exceptions -fno-rtti -c -o

cflags_libk = -ffreestanding -fno-stack-protector -fpic -fno-builtin -fshort-wchar -mno-red-zone \
	-Wall -Wextra -c -o

cppflags_common = -I ../includes -ffreestanding -fno-stack-protector -fpic -fno-builtin -fshort-wchar -mno-red-zone \
	-Wall -Wextra -fno-exceptions -fno-rtti -c -o

cppflags_arch = -I ../../includes -fno-stack-protector -fpic -fno-builtin \
	-fno-builtin-fshort-wchar -mno-red-zone -fno-exceptions -fno-rtti -c -o

# Linker

linkerfile = build/link/$(arch)-$(firmware)/elf.lds
linker_flags = -nostdlib -znocombreloc -T $(linkerfile) -shared -Bsymbolic
